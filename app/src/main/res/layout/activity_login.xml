<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <com.capstoneapp.ikanqu.ui.component.FieldEmail
        android:id="@+id/field_login_email"
        style="@style/EditFieldStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.capstoneapp.ikanqu.ui.component.FieldPassword
        android:id="@+id/field_password"
        style="@style/EditFieldStyle"
        app:layout_constraintEnd_toEndOf="@id/field_login_email"
        app:layout_constraintStart_toStartOf="@id/field_login_email"
        app:layout_constraintTop_toBottomOf="@id/field_login_email" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txt_login"
        app:layout_constraintEnd_toEndOf="@id/field_password"
        app:layout_constraintStart_toStartOf="@id/field_password"
        app:layout_constraintTop_toBottomOf="@id/field_password" />

</androidx.constraintlayout.widget.ConstraintLayout>